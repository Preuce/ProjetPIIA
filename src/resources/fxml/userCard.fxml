<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#goToLogin" stylesheets="@../css/userCard.css" text="Button" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserCardController">
   <graphic>
      <VBox alignment="CENTER">
         <children>
            <Text fx:id="username" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" text="&lt;username&gt;">
               <font>
                  <Font name="Lato Regular" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </Text>
            <ImageView fx:id="avatar" fitHeight="192.0" fitWidth="192.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </ImageView>
         </children>
      </VBox>
   </graphic>
</Button>
